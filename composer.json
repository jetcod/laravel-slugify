{
    "name": "jetcod/laravel-slugify",
    "description": "A Laravel package that automatically generates slugs for model attributes, simplifying the creation of URL-friendly slugs.",
    "keywords": ["laravel", "slugify", "slug", "url", "url-friendly", "url-slug", "url-slugify", "url-slugify-laravel", "laravel-slugify"],
    "type": "library",
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0",
        "jetcod/data-transport": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^9.0|^10.0|^11.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jetcod\\LaravelSlugify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jetcod\\LaravelSlugify\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Hamid Ghorashi",
            "email": "h.ghorashi@gmail.com"
        }
    ],
    "scripts": {
        "phpcs-fix": "./vendor/bin/php-cs-fixer fix ",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=-1 src/",
        "test": "./vendor/bin/phpunit --testdox",
        "coverage": "./vendor/bin/phpunit --coverage-html coverage/"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
